<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>State</th>
            <th>City</th>
            <th>Score</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <%@users.each do |user|%>
        <tr>
            <td><%=user.full_name%></td>
            <td><%=user.email%></td>
            <td><%=user.city%></td>
            <td><%=user.state%></td>
            <td><%=user.score%></td>
            <td><%=link_to "Details", user%></td>
            <td><%=link_to "Edit", edit_user_path(user)%></td>
            <td><%=link_to "Delete", user_path(user), data: { turbo_method: :delete, turbo_confirm: 'are you sure?'}%></td>
        </tr>
        <%end%>
    </tbody>
</table><br/>
<%=link_to "Create a New User", new_user_path%>